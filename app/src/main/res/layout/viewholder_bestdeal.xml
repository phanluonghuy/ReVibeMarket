<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="115dp">

        <ImageView
            android:id="@+id/BestDealImg"
            android:layout_width="83dp"
            android:layout_height="83dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="13dp"
            android:scaleType="fitCenter"
            android:src="@drawable/avatar" />

        <TextView
            android:id="@+id/BestDealTiTle"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:text="Scotch Premium"
            app:layout_constraintStart_toEndOf="@id/BestDealImg"
            app:layout_constraintTop_toTopOf="@id/BestDealImg"
            android:layout_marginTop="13dp"
            android:layout_marginStart="14dp"
            android:fontFamily="@font/poppins_light"
            android:textStyle="bold"
            android:textColor="@color/contentTextColor"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/tv_new_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$2000"
            app:layout_constraintTop_toBottomOf="@id/BestDealTiTle"
            app:layout_constraintStart_toEndOf="@id/tv_price"
            android:textColor="@color/miniTitle"
            android:textSize="15dp"
            android:fontFamily="@font/sf_pro_display"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display"
            android:text="$1600"
            android:textColor="@color/contentTextColor"

            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="@id/BestDealTiTle"
            app:layout_constraintTop_toBottomOf="@id/BestDealTiTle" />

        <Button
            android:id="@+id/btn_see_product"
            android:layout_width="107dp"
            android:layout_height="36.4dp"
            android:layout_marginStart="26dp"
            android:background="@drawable/login_button_bk"
            android:fontFamily="@font/poppins_light"
            android:text="See product"
            android:textAllCaps="false"
            android:textColor="@color/whiteTextColor"
            android:textSize="13dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toEndOf="@id/BestDealTiTle"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/sf_pro_display"
            android:text="-50%"
            android:textColor="@color/contentTextColor"
            app:layout_constraintEnd_toEndOf="@+id/tv_price"
            app:layout_constraintStart_toStartOf="@+id/tv_price"
            app:layout_constraintTop_toBottomOf="@+id/tv_price" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>